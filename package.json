{
  "name": "neural-dharma",
  "version": "0.1.0",
  "description": "AI alignment framework based on Bhagavad Gita principles. Aligned by dharma. Governed by karma. By Darshj.me",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "bin": {
    "neural-dharma": "./dist/cli/audit.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src tests examples --ext .ts",
    "lint:fix": "eslint src tests examples --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\" \"examples/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\" \"examples/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run typecheck && npm run build && npm run test",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "ai-alignment",
    "ai-safety",
    "bhagavad-gita",
    "ethics",
    "dharma",
    "alignment",
    "guardrails",
    "nishkama-karma",
    "goodharts-law",
    "reward-shaping",
    "svadharma",
    "ahimsa",
    "satya"
  ],
  "author": "Darshj.me",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/darshjme-codes/neural-dharma"
  },
  "homepage": "https://github.com/darshjme-codes/neural-dharma#readme",
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^22.19.11",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.3.0",
    "typescript": "^5.9.3",
    "vitest": "^2.1.9"
  }
}
